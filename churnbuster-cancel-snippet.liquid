        const hasContract = !!window.inveterate?.customer?.subscriptionContract?.id;
        cancelButton.setAttribute('data-has-contract', hasContract ? 'true' : 'false');
      }
    }
    ChurnBuster = window.ChurnBuster || {};
    ChurnBuster.cancelAttributes = {
